          "investor"
        ],
        "summary": "find an investor.",
        "description": "retrieve an investor's personal information and portfolio by specifying an investor_id.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "id for investor for whom information is to be retrieved.",
            "required": true,
            "schema": {
              "$ref": "#/definitions/investor_id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "investor information successfully retrieved.",
            "schema": {
              "$ref": "#/definitions/investor"
            }
          }
        }
      }
    },
    "/investor/all": {
      "get": {
